{
    "compilerOptions": {
        "target": "esnext",
        "lib": [ "esnext", "dom" ],
        "module": "esnext",

        "outDir": "web/engine",

        "exactOptionalPropertyTypes": true,
        "importsNotUsedAsValues": "error",
        "isolatedModules": true,
        "noEmitOnError": true,
        "preserveValueImports": true,
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "useDefineForClassFields": true,
    },

    "include": [
        "src/**/*.ts",
    ]
}
